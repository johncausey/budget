<div class="header-span header-links">
  

  <div class="row">
    <div class="large-4 columns">
      <div class="header-logo">
        <% if current_user %>
          <%= link_to(image_tag("rainybudgetlogo.png", :style => "margin: 10px 0px 10px 0px"), current_month_path) %>
        <% else %>
          <%= link_to(image_tag("rainybudgetlogo.png", :style => "margin: 10px 0px 10px 0px"), root_url) %>
        <% end %>
      </div>
    </div>

    <div class="large-8 columns main-nav">
      <ul class="right">
        <% if !current_user %>
          <li class="right">
            <a href="#" data-dropdown="drop1">Access my Account</a>
            <div id="drop1" class="f-dropdown content small" data-dropdown-form>
              <%= form_tag sessions_path do %>
                <p>
                  <%= label_tag :email, "Email Address" %>
                  <%= text_field_tag :email, params[:email], :placeholder => "katie.bell@gmail.com" %>
                </p>
                <p>
                  <%= label_tag :password, "Password" %>
                  <%= password_field_tag :password %>
                </p>
                <p>
                  <%= check_box_tag :remember_me, 1, params[:remember_me], :style => "display:inline !important" %>
                  <%= label_tag :remember_me, "Remember Me", :style => "display:inline !important" %>
                  <br />
                  <span class="forgot-remember"><%= link_to "Password Recovery", new_password_reset_path %></span>
                </p>
                <%= submit_tag "Sign In", :disable_with => "Logging in...", :class => "button right" %>
              <% end %>
            </div>
          </li>
          <li class="right"><%= link_to "Create an Account", signup_path %></li>
          <li class="right"><%= link_to "Contact Us", contact_us_path %>
          <li class="right"><%= link_to "About rainybudget.com", about_path %>
        <% end %>
        <% if current_user %>
          <li class="right"><%= link_to "View my Budget", current_month_path %></li>
          
          <li class="right">Logged in as <%= current_user.full_name %></li>
        <% end %>
        
      </ul>
    </div>
  </div>

</div>
