<div class="row">
  <div class="large-12 columns" style="height: 37px;">
    <% if flash[:error] %>
      <div class="alert-box alert text-center"><%= flash[:error] %></div>
    <% end %>

    <%if flash[:notice] %>
      <div class="alert-box text-center"><%= flash[:notice] %></div>
    <% end %>

    <%if flash[:alert] %>
      <div class="alert-box alert text-center"><%= flash[:alert] %></div>
    <% end %>
  </div>
</div>
