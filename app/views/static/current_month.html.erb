<script>
  jQuery(function() {
    return Morris.Area({
      element: 'monthly-expenses-chart',
      data: $('#monthly-expenses-chart').data('expenses'),
      xkey: 'date_added',
      ykeys: ['fluid_amount', 'daily_saving', 'daily_fixed'],
      xLabelFormat: function(date) {
          return date.getMonth()+1+'/'+date.getDate()+'/'+date.getFullYear(); 
          },
      labels: ['Fluid Spending', 'Average Saving Cost', 'Average Fixed Cost'],
      preUnits: '$',
      pointSize: 1,
      lineWidth: 1,
      fillOpacity: 0.75,
      dateFormat: function(date_added) {
          d = new Date(date_added);
          var months = ['January','February','March','April','May','June','July','August','September','October','November','December'];
          var days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
          return (days[ d.getDay()])+' '+(months[ d.getMonth()])+' '+d.getDate();
          },
    });
  });
</script>
