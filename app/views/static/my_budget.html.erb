
<div class="row">
  <div class="large-12 columns">
    <h1><%= Time.now.strftime("%A") %> <small><%= Time.now.strftime("%b %d, %Y") %></small></h1>
    <hr />
  </div>
</div>

<div class="row">
  <div class="large-3 columns">
    <ul class="side-nav">
      <li><a href="#">Current Progress</a></li>
      <li><a href="#">Expenses</a></li>
      <li><a href="#">Income</a></li>
      <li><a href="#">Yearly Progress</a></li>
    </ul>
  </div>
  <div class="large-9 columns">
    <div class="row">
      <div class="large-12 columns">
        <p>You have spent $344.87 of $4,200.00</p>
        <div class="progress secondary"><span class="meter" style="width: 8.21%"></span></div>
      </div>
      <div class="large-4 columns">
        <h6 class="fixed-font">Fixed Expenses</h6>
        <div class="progress"><span class="meter" style="width: 8.21%"></span></div>
      </div>
      <div class="large-4 columns">
        <h6 class="fluid-font">Fluid Spending</h6>
        <div class="progress alert"><span class="meter" style="width: 8.21%"></span></div>
      </div>
      <div class="large-4 columns">
        <h6 class="saving-font">Savings Retained</h6>
        <div class="progress success"><span class="meter" style="width: 8.21%"></span></div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= line_chart [ {:name => "Fixed", :data => {Date.today.beginning_of_month => 5, Date.today + 10 => 2, Date.today.end_of_month => 6}}, {:name => "Fluid", :data => {Date.today.beginning_of_month => 25, Date.today + 5 => 17, Date.today.end_of_month => 29}} ] %>
        </div>
      </div>
    </div>

    <div class="row">

    </div>
  </div>
</div>
